<project>

    <target name="clean">
        <delete dir="dist/" />
    </target>

    <target name="build">
        <mkdir dir="build/bin/" />
        <mkdir dir="build/data/" />
        <javac srcdir="src" destdir="build/bin" />
        <jar destfile="build/server.jar" basedir="build/bin">
            <manifest>
                <attribute name="Main-Class" value="de.tuc.collagecreator.server.ServerProc" />
            </manifest>
        </jar>
        <jar destfile="build/client.jar" basedir="build/bin">
            <manifest>
                <attribute name="Main-Class" value="de.tuc.collagecreator.client.ClientFrame" />
            </manifest>
        </jar>
    </target>

</project>
